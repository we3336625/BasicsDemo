<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:width">@dimen/dimen_50_dip</item>
        <item name="android:height">@dimen/dimen_50_dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_5_dip</item>
        <item name="android:textSize">@dimen/common_text_size20</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
    </style>

    <style name="common_edittext">
        <item name="android:layout_marginTop">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:textSize">@dimen/common_text_size17</item>
    </style>

    <style name="common_textview">
        <item name="android:layout_marginLeft">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dip</item>
        <item name="android:textSize">@dimen/common_text_size17</item>
    </style>

    <style name="common_checkbox">
        <item name="android:layout_marginLeft">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginTop">@dimen/dimen_10_dip</item>
    </style>

    <style name="main_button">
        <item name="android:height">@dimen/dimen_50_dip</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10_dip</item>
        <item name="android:textSize">@dimen/common_text_size20</item>
    </style>

    <style name="common_radiobutton">
        <item name="android:layout_marginBottom">@dimen/dimen_10_dip</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10_dip</item>
        <item name="android:height">@dimen/dimen_50_dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_text_size20</item>
    </style>

    <style name="list_text_size_max">
        <item name="android:textSize">@dimen/common_text_size20</item>
    </style>

    <style name="font_32sp">
        <item name="android:textSize">@dimen/common_text_size32</item>
    </style>
</resources>
