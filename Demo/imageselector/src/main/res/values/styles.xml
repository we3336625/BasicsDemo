     <!-- anim -->
    <style name="cp_dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/cp_components_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/cp_components_anim_exit</item>
    </style>

    <style name="cp_components_ios_dialogNoTitle" parent="@android:style/Theme.Dialog">

        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- dim:模糊的 阴影效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景图片的大小也影响窗口的大小 -->
        <item name="android:windowBackground">@color/cp_components_dialogbj</item>
    </style>

    <style name="cp_components_dialogNoTitle" parent="@android:style/Theme.Dialog">

        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- dim:模糊的 阴影效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景图片的大小也影响窗口的大小 -->
        <item name="android:windowBackground">@color/cp_components_dialogbj</item>
    </style>

