<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageselector_wrap_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tdroid.imageselector.library.imageselelctor.SquareImageView
        android:id="@+id/iv_selectorview_list_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/cp_icon_image_stub" />

    <ImageView
        android:id="@+id/chk_selectorview_checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="5.5dp"
        android:layout_marginTop="5.5dp"
        android:background="@mipmap/cp_icon_imageselector_unchecked" />
</FrameLayout>