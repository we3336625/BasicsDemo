<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#939191" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/cp_white"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/cp_white"
                android:startColor="@color/cp_white"
                android:type="linear" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>