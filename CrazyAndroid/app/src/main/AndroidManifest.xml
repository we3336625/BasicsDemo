<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zx.crazyandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- xml  与  java 代码 共同控制UI -->
        <activity android:name=".biz.MainActivity" />
        <!-- java 代码 写UI -->
        <activity android:name=".biz.CodeViewActivity" />
        <!-- 自定义view 跟随手机动的红色circle -->
        <activity android:name=".biz.CustomViewActivity" />
        <!-- tableLayout 应用 -->
        <activity android:name=".biz.TableLayoutActivity" />
        <!-- frameLayout 重叠效果 -->
        <activity android:name=".biz.FrameLayoutActivity" />
        <!-- 开关 更改linearLayout orientation -->
        <activity android:name=".biz.ToggleSwitchActivity" />
        <!-- 时钟 计时器 -->
        <activity android:name=".biz.ClockActivity" />
        <!-- imageView -->
        <activity android:name=".biz.ImageViewActivity" />
        <!-- listView -->
        <activity android:name=".biz.ListViewActivity" />
        <!-- 自动补全textView -->
        <activity android:name=".biz.AutoCompleteActivity" />
        <!-- GridView 点击item放大图片 -->
        <activity android:name=".biz.GridViewActivity" />
        <!-- 可展开的列表组件 -->
        <activity android:name=".biz.ExpandableListViewActivity" />
        <!-- spinner: xml 通过entries设置数据   java setAdapter -->
        <activity android:name=".biz.SpinnerActivity" />
        <!-- AdapterViewFlipper 实现自动播放图片 -->
        <activity android:name=".biz.AdapterViewFlipperActivity" />
        <!-- StackView 叠在一起的图片 -->
        <activity android:name=".biz.StackViewActivity" />
        <!-- progressBar 使用 -->
        <activity android:name=".biz.ProgressBarActivity" />
        <!-- seekBar  控制图片透明度 -->
        <activity android:name=".biz.SeekBarActivity" />
        <!-- ViewSwitcher 实现仿android系统launcher界面 -->
        <activity android:name=".biz.ViewSwitcherActivity" />
    </application>

</manifest>